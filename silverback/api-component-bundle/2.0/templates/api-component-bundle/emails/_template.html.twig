{% apply inky_to_html|inline_css(source('@css/foundation-emails.css'), source('@css/emails.css')) %}
  <container>
    <row class="header">
      <columns>

        <spacer size="16"></spacer>

        <center>
          <img src="{{ email.image('@images/api-component-bundle/email_logo.png') }}" alt="Logo" class="logo">
        </center>
      </columns>
    </row>
    <row>
      <columns>
        <spacer size="16"></spacer>

        {% block content %}{% endblock %}
      </columns>
    </row>
    <spacer size="16"></spacer>
  </container>
{% endapply %}
